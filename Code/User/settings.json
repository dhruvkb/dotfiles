{
	// This JSON editor is the primary interface for settings.
	// Can switch to GUI using icon in the top-right corner.
	"workbench.settings.editor": "json",

	// Window
	// ======

	"window.openFoldersInNewWindow": "on",

	// Workbench
	// =========

	"workbench.startupEditor": "newUntitledFile",
	"workbench.tree.indent": 16,
	"workbench.editor.empty.hint": "hidden",
	"workbench.tree.renderIndentGuides": "always",

	// "workbench.colorTheme": "Catppuccin Mocha",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.productIconTheme": "fluent-icons",

	// Theme
	// =====

	"material-icon-theme.hidesExplorerArrows": false,
	"material-icon-theme.activeIconPack": "vue",

	// Editor
	// ======

	// Font
	"editor.fontFamily": "'Monaspace Neon', 'JetBrainsMono Nerd Font', monospace",
	"editor.fontSize": 14,
	"editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'liga'",

	// Decoration
	"editor.rulers": [72, 80, 88, 120],
	"editor.tabSize": 2,
	"editor.insertSpaces": false,
	"editor.renderWhitespace": "boundary",

	// Other
	"editor.minimap.renderCharacters": false,
	"editor.inlineSuggest.enabled": true,
	"editor.scrollBeyondLastLine": false,
	"editor.accessibilitySupport": "off",
	"editor.guides.bracketPairs": true,
	"editor.bracketPairColorization.enabled": true,
	"editor.wordBasedSuggestions": "off",
	"editor.largeFileOptimizations": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",

	// TextMate
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": "comment",
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": "string.quoted.docstring.multi.python",
				"settings": {
					"fontStyle": "italic"
				}
			}
		]
	},

	// Emmet
	"emmet.includeLanguages": {
		"django-html": "html"
	},

	// Save
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {},

	// Files
	// =====

	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.autoSave": "onFocusChange",

	// Terminal
	// ========

	// Font
	"terminal.integrated.fontSize": 14,
	"terminal.integrated.lineHeight": 1.5,

	// Text
	"terminal.integrated.drawBoldTextInBrightColors": false,

	// Other
	"terminal.integrated.showExitAlert": false,
	"terminal.external.osxExec": "iTerm.app",
	"terminal.integrated.enablePersistentSessions": false,
	"terminal.integrated.inheritEnv": false,

	// Languages
	// =========

	// Python
	"[python]": {
		// Editor overrides
		"editor.tabSize": 4,
		"editor.insertSpaces": true,
		// Formatting
		"editor.defaultFormatter": "charliermarsh.ruff",
		"editor.formatOnSave": true
	},
	"python.languageServer": "Pylance",
	"python.analysis.autoImportCompletions": true,
	"python.analysis.autoFormatStrings": true,
	"python.terminal.activateEnvironment": false,

	// JavaScript
	"[javascript]": {
		// Formatting
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"javascript.updateImportsOnFileMove.enabled": "never",

	// HTML
	"[html]": {
		"editor.suggest.insertMode": "replace"
	},

	"[django-html]": {
		"editor.formatOnSave": false
	},

	// Markdown
	"[markdown]": {
		"editor.wordWrap": "off",
		"editor.formatOnSave": true
	},

	// MDX
	"[mdx]": {
		"editor.wordWrap": "wordWrapColumn"
	},

	// Miscellaneous
	// =============

	// GitHub Copilot
	"github.copilot.enable": {
		"*": true
	},

	// Code Spell Checker
	"cSpell.language": "en-GB",
	"cSpell.userWords": ["color", "Colored", "dotfiles", "Openverse"],

	// Git
	"git.confirmSync": false,
	"git.openRepositoryInParentFolders": "always",
	"scm.showHistoryGraph": false,

	// ESlint
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"terminal.integrated.tabs.location": "left",
	"diffEditor.ignoreTrimWhitespace": false,
	"github.copilot.editor.enableAutoCompletions": true,
	"githubPullRequests.fileListLayout": "tree",
	"githubPullRequests.pullBranch": "never",
	"gitlens.codeLens.enabled": false,
	"gitlens.currentLine.enabled": false
}
